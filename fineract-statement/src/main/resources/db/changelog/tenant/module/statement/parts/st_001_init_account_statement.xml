<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <!--  add statement tables -->
    <changeSet author="fineract" id="001">
        <createTable tableName="m_product_statement">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="statement_code" type="VARCHAR(40)">
                <constraints nullable="false"/>
            </column>
            <column name="statement_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="publish_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="batch_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="recurrence" type="VARCHAR(100)"/>
            <column name="sequence_prefix" type="VARCHAR(10)"/>
        </createTable>
        <addUniqueConstraint columnNames="product_id, product_type, statement_code" constraintName="uk_product_statement"
                             tableName="m_product_statement"/>
    </changeSet>
    <changeSet author="fineract" id="002">
        <createTable tableName="m_account_statement_result">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="result_code" type="VARCHAR(40)">
                <constraints nullable="false"/>
            </column>
            <column name="product_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="statement_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="publish_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="result_status" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="result_content" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="result_metadata" type="TEXT"/>
            <column name="result_path" type="VARCHAR(255)"/>
            <column name="result_name" type="VARCHAR(255)"/>
            <column name="generatedon_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="publishedon_date" type="DATE"/>
            <column name="created_on_utc" type="DATETIME(6)">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_on_utc" type="DATETIME(6)">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="fineract" id="003">
        <createTable tableName="m_account_statement">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="product_statement_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="account_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="recurrence" type="VARCHAR(100)"/>
            <column name="sequence_prefix" type="VARCHAR(10)"/>
            <column name="statement_status" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="sequence_no" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="statement_date" type="DATE"/>
            <column name="statement_balance" type="DECIMAL(19, 6)"/>
            <column name="statement_result_id" type="BIGINT"/>
            <column name="next_statement_date" type="DATE"/>
            <column name="created_on_utc" type="DATETIME(6)">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_on_utc" type="DATETIME(6)">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint columnNames="product_statement_id, account_id" constraintName="uk_account_statement"
                             tableName="m_account_statement"/>
        <addForeignKeyConstraint baseColumnNames="product_statement_id" baseTableName="m_account_statement"
                                 constraintName="uk_account_statement_product_statement" deferrable="false" initiallyDeferred="false"
                                 onDelete="RESTRICT" onUpdate="RESTRICT" referencedColumnNames="id"
                                 referencedTableName="m_product_statement" validate="true"/>
        <addForeignKeyConstraint baseColumnNames="statement_result_id" baseTableName="m_account_statement"
                                 constraintName="uk_account_statement_result" deferrable="false" initiallyDeferred="false"
                                 onDelete="RESTRICT" onUpdate="RESTRICT" referencedColumnNames="id"
                                 referencedTableName="m_account_statement_result" validate="true"/>
    </changeSet>
    <changeSet author="fineract" id="004">
        <insert tableName="job">
            <column name="name" value="Generate Account Statements"/>
            <column name="display_name" value="Generate Account Statements"/>
            <column name="cron_expression" value="0 0 1 * * ?"/>
            <column name="create_time" valueDate="${current_datetime}"/>
            <column name="task_priority" valueNumeric="5"/>
            <column name="group_name"/>
            <column name="previous_run_start_time"/>
            <column name="job_key" value="Generate Account StatementsDetail1 _ DEFAULT"/>
            <column name="initializing_errorlog"/>
            <column name="is_active" valueBoolean="false"/>
            <column name="currently_running" valueBoolean="false"/>
            <column name="updates_allowed" valueBoolean="true"/>
            <column name="scheduler_group" valueNumeric="0"/>
            <column name="is_misfired" valueBoolean="false"/>
            <column name="node_id" valueNumeric="1"/>
            <column name="is_mismatched_job" valueBoolean="false"/>
        </insert>
        <insert tableName="job">
            <column name="name" value="Publish Account Statements"/>
            <column name="display_name" value="Publish Account Statements"/>
            <column name="cron_expression" value="0 0 1 * * ?"/>
            <column name="create_time" valueDate="${current_datetime}"/>
            <column name="task_priority" valueNumeric="5"/>
            <column name="group_name"/>
            <column name="previous_run_start_time"/>
            <column name="job_key" value="Publish Account StatementsDetail1 _ DEFAULT"/>
            <column name="initializing_errorlog"/>
            <column name="is_active" valueBoolean="false"/>
            <column name="currently_running" valueBoolean="false"/>
            <column name="updates_allowed" valueBoolean="true"/>
            <column name="scheduler_group" valueNumeric="0"/>
            <column name="is_misfired" valueBoolean="false"/>
            <column name="node_id" valueNumeric="1"/>
            <column name="is_mismatched_job" valueBoolean="false"/>
        </insert>
    </changeSet>
    <changeSet author="fineract" id="005">
        <insert tableName="job_parameters">
            <column name="job_id" valueComputed="(select j.id from job j where j.name = 'Generate Account Statements')"/>
            <column name="parameter_name" value="auto-delete-result"/>
            <column name="parameter_value" valueNumeric="true"/>
        </insert>
    </changeSet>
    <changeSet author="fineract" id="006">
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio"/>
            <column name="code" value="READ_PRODUCTSTATEMENT"/>
            <column name="entity_name" value="PRODUCTSTATEMENT"/>
            <column name="action_name" value="READ"/>
            <column name="can_maker_checker" valueBoolean="false"/>
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio"/>
            <column name="code" value="CREATE_PRODUCTSTATEMENT"/>
            <column name="entity_name" value="PRODUCTSTATEMENT"/>
            <column name="action_name" value="CREATE"/>
            <column name="can_maker_checker" valueBoolean="false"/>
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio"/>
            <column name="code" value="UPDATE_PRODUCTSTATEMENT"/>
            <column name="entity_name" value="PRODUCTSTATEMENT"/>
            <column name="action_name" value="CREATE"/>
            <column name="can_maker_checker" valueBoolean="false"/>
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio"/>
            <column name="code" value="READ_ACCOUNTSTATEMENT"/>
            <column name="entity_name" value="ACCOUNTSTATEMENT"/>
            <column name="action_name" value="READ"/>
            <column name="can_maker_checker" valueBoolean="false"/>
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio"/>
            <column name="code" value="CREATE_ACCOUNTSTATEMENT"/>
            <column name="entity_name" value="ACCOUNTSTATEMENT"/>
            <column name="action_name" value="CREATE"/>
            <column name="can_maker_checker" valueBoolean="false"/>
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio"/>
            <column name="code" value="UPDATE_ACCOUNTSTATEMENT"/>
            <column name="entity_name" value="ACCOUNTSTATEMENT"/>
            <column name="action_name" value="CREATE"/>
            <column name="can_maker_checker" valueBoolean="false"/>
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio"/>
            <column name="code" value="READ_ACCOUNTSTATEMENT_RESULT"/>
            <column name="entity_name" value="ACCOUNTSTATEMENT_RESULT"/>
            <column name="action_name" value="READ"/>
            <column name="can_maker_checker" valueBoolean="false"/>
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio"/>
            <column name="code" value="CREATE_ACCOUNTSTATEMENT_RESULT"/>
            <column name="entity_name" value="ACCOUNTSTATEMENT_RESULT"/>
            <column name="action_name" value="CREATE"/>
            <column name="can_maker_checker" valueBoolean="false"/>
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio"/>
            <column name="code" value="PUBLISH_ACCOUNTSTATEMENT_RESULT"/>
            <column name="entity_name" value="ACCOUNTSTATEMENT_RESULT"/>
            <column name="action_name" value="PUBLISH"/>
            <column name="can_maker_checker" valueBoolean="false"/>
        </insert>
    </changeSet>
    <changeSet author="fineract" id="007">
        <dropUniqueConstraint constraintName="uk_product_statement" tableName="m_product_statement"/>
        <addUniqueConstraint columnNames="statement_code" constraintName="uk_product_statement" tableName="m_product_statement"/>
    </changeSet>
</databaseChangeLog>
